{#- Generate basic settings for the device #}
system {
    host-name {{ inventory_hostname }}
    root-authentication {
        encrypted-password "{{ root_hash }}";
    }
    login {
        user john {
            uid 2004;
            class super-user;
            authentication {
                ssh-rsa "ssh-rsa  johnmccann@macbook-pro-2.jnpr.net"
            }
        }
    }
    replace:
    name-server {
        {% for server in aja2_host.dns_servers %}
          {{ server }};
        {% endfor %}
    }
    services {
        netconf {
            ssh {
                connection-limit {{ jmax.connection_limit }};
                rate-limit {{ jmax.rate_limit  }};
            }
        }
        ssh {
            connection-limit {{ jmax.connection_limit }};
            rate-limit {{ jmax.rate_limit  }};
        }
    }
    replace:
    ntp {
        {% for ntp in aja2_host.ntp_servers %}
          server {{ ntp }}
        {% endfor %}
    }
}
snmp {
    description "{{ aja2_host.snmp.description }}"
    location "{{ aja2_host.snmp.location }}"
}